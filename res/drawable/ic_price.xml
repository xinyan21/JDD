<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Non focused states -->
    <item android:state_focused="false" android:state_checked="false"
          android:state_pressed="false" android:drawable="@drawable/ic_price_a"/>
    <item android:state_focused="false" android:state_checked="true"
          android:state_pressed="false" android:drawable="@drawable/ic_price_b"/>

    <!-- Focused states -->
    <item android:state_focused="true" android:state_checked="false"
          android:state_pressed="false" android:drawable="@drawable/ic_price_a"/>
    <item android:state_focused="true" android:state_checked="true"
          android:state_pressed="false" android:drawable="@drawable/ic_price_a"/>

    <!-- Pressed -->
    <item android:state_pressed="true" android:drawable="@drawable/ic_price_b"/>
</selector>
