<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="85dp">

        <Button
            android:id="@+id/btn_coin_num1"
            android:text="20"
            android:tag="20"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_btn_rounded_orange"
            android:layout_width="85dp"
            android:layout_height="45dp" />

        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_coin_num2"
            android:text="50"
            android:tag="50"
            android:textSize="18sp"
            android:textColor="@color/text_gray"
            android:background="@drawable/shape_input_rounded_corner"
            android:layout_width="85dp"
            android:layout_height="45dp" />

        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_coin_num3"
            android:text="100"
            android:tag="100"
            android:textSize="18sp"
            android:textColor="@color/text_gray"
            android:background="@drawable/shape_input_rounded_corner"
            android:layout_width="85dp"
            android:layout_height="45dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_coin_num4"
            android:text="200"
            android:tag="200"
            android:textSize="18sp"
            android:textColor="@color/text_gray"
            android:background="@drawable/shape_input_rounded_corner"
            android:layout_width="85dp"
            android:layout_height="45dp" />

        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="45dp" />

        <Button
            android:id="@+id/btn_coin_num5"
            android:text="500"
            android:textSize="18sp"
            android:tag="500"
            android:textColor="@color/text_gray"
            android:background="@drawable/shape_input_rounded_corner"
            android:layout_width="85dp"
            android:layout_height="45dp" />

        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="45dp" />

        <Button
            android:id="@+id/btn_coin_num6"
            android:text="1000"
            android:tag="1000"
            android:textSize="18sp"
            android:textColor="@color/text_gray"
            android:background="@drawable/shape_input_rounded_corner"
            android:layout_width="85dp"
            android:layout_height="45dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_coin_num7"
            android:text="2000"
            android:tag="2000"
            android:textSize="18sp"
            android:textColor="@color/text_gray"
            android:background="@drawable/shape_input_rounded_corner"
            android:layout_width="85dp"
            android:layout_height="45dp" />

        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="45dp" />

        <Button
            android:id="@+id/btn_coin_num8"
            android:text="5000"
            android:textSize="18sp"
            android:tag="5000"
            android:textColor="@color/text_gray"
            android:background="@drawable/shape_input_rounded_corner"
            android:layout_width="85dp"
            android:layout_height="45dp" />

        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="45dp" />

        <Button
            android:id="@+id/btn_coin_num9"
            android:text="10000"
            android:tag="10000"
            android:textSize="18sp"
            android:textColor="@color/text_gray"
            android:background="@drawable/shape_input_rounded_corner"
            android:layout_width="85dp"
            android:layout_height="45dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="40dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/wxpay"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btn_pay"
            android:background="@drawable/shape_btn_rounded_orange"
            android:text="微信支付"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_width="200dp"
            android:layout_height="45dp" />
    </LinearLayout>
</LinearLayout>