<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:id="@+id/sv_main"
        android:scrollbars="none"
        android:background="@color/bg_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/bg_gray"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:paddingRight="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <include
                        layout="@layout/user_portrait_with_gender_big"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_vertical" />

                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_user_name"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:text="- -"
                                android:maxLength="8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:id="@+id/iv_verified"
                                android:visibility="gone"
                                android:layout_marginLeft="2dp"
                                android:src="@drawable/v_b"
                                android:layout_width="25dp"
                                android:layout_height="25dp" />

                            <ImageView
                                android:id="@+id/iv_rank_icon"
                                android:visibility="gone"
                                android:layout_marginLeft="2dp"
                                android:src="@drawable/rank_1_b"
                                android:layout_width="25dp"
                                android:layout_height="25dp" />

                            <TextView
                                android:id="@+id/tv_rank"
                                android:text="- -"
                                android:visibility="gone"
                                android:layout_marginLeft="2dp"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="所在地："
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tv_address"
                                android:text="- -"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_marginLeft="10dp"
                                android:text="职业："
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tv_profession"
                                android:text="- -"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/btn_follow"
                                android:text="关注"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:background="@drawable/shape_btn_rounded_orange"
                                android:layout_width="60dp"
                                android:layout_height="30dp" />

                            <Button
                                android:id="@+id/btn_reward"
                                android:text="赞赏"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:background="@drawable/shape_btn_rounded_orange"
                                android:layout_width="60dp"
                                android:layout_height="30dp" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_more_user_info"
                            android:background="@color/transparent"
                            android:textColor="@color/text_blue"
                            android:textSize="14sp"
                            android:text="点击查看更多资料>>"
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:background="#f5f5f5"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_intelligences"
                        android:background="@color/transparent"
                        android:text="情报"
                        android:textColor="@color/text_black"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/v_bold_line_intelligence"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/menu_text_orange"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_experiences_study"
                        android:background="@color/transparent"
                        android:text="智文"
                        android:textColor="@color/menu_text_gray"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/v_bold_line_experience"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_follows"
                        android:background="@color/transparent"
                        android:text="关注"
                        android:textColor="@color/menu_text_gray"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/v_bold_line_follows"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />
                </LinearLayout>
            </LinearLayout>

            <com.handmark.pulltorefresh.library.PullToRefreshListView
                android:id="@+id/lv_user_index_data_list"
                android:fadingEdge="none"
                android:scrollbars="none"
                android:divider="@color/stock_list_divider"
                android:dividerHeight="0.1dp"
                android:cacheColorHint="#00000000"
                android:fastScrollEnabled="false"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false"
                android:smoothScrollbar="true"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="505dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
