<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title_bar" />

    <TextView
        android:text="交易密码用于涉及金币的交易或转账操作"
        android:textColor="@color/menu_text_orange"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:text="原密码"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_old_pwd"
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:maxLength="20"
            android:background="@drawable/shape_input_rounded_corner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:text="新密码"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_new_pwd"
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:hint="6-16位数字和字母组成"
            android:maxLength="20"
            android:background="@drawable/shape_input_rounded_corner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:text="确认密码"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_confirmed_pwd"
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:maxLength="16"
            android:hint="请再次输入密码"
            android:background="@drawable/shape_input_rounded_corner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:gravity="center_vertical"
            android:text="验证码"
            android:textSize="18sp"
            android:textColor="@color/text_black"
            android:layout_width="80dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/et_verification_code"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_input_rounded_corner"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/btn_get_verification_code"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="获取验证码"
            android:textColor="@color/menu_text_orange"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_marginTop="30dp"
        android:text="提交"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_btn_rounded_orange"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

</LinearLayout>