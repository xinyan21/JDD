<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title_bar" />

    <TextView
        android:text="发财富红包给好友，我欣赏我任性"
        android:textColor="@color/menu_text_orange"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:text="收款账号"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_payee_account"
            android:singleLine="true"
            android:maxLength="11"
            android:hint="注册手机号"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_input_rounded_corner"
            android:layout_width="145dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_query_user_name"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_btn_rounded_orange"
            android:text="查询"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:text="收款人昵称"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_payee_name"
            android:singleLine="true"
            android:maxLength="20"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_input_rounded_corner"
            android:layout_width="145dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:text="赠送金额"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_amount_of_coin"
            android:singleLine="true"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_input_rounded_corner"
            android:layout_width="145dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_marginLeft="5dp"
            android:text="今币"
            android:textColor="@color/text_gray"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:text="交易密码"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_trade_pwd"
            android:inputType="textPassword"
            android:singleLine="true"
            android:maxLength="16"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_input_rounded_corner"
            android:layout_width="145dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm_transfer"
        android:layout_marginTop="45dp"
        android:text="确认转账"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_btn_rounded_orange"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
</LinearLayout>