<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/bg_black"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageButton
            android:id="@+id/ibtn_back"
            android:src="@drawable/btn_back"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_activity_title"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:text="标题"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_edit"
            android:text="编辑"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@color/transparent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="70dp"
            android:layout_height="40dp" />
    </RelativeLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:text="昵 称："
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/et_nick_name"
                    android:text="- -"
                    android:enabled="false"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/text_gray"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/bg_gray"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:text="性 别："
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />

                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rbtn_male"
                        android:text="男"
                        android:enabled="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/rbtn_female"
                        android:enabled="false"
                        android:layout_marginLeft="5dp"
                        android:text="女"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:text="军 衔："
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/iv_rank_icon"
                    android:src="@drawable/rank_1_b"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_rank"
                    android:editable="false"
                    android:focusable="false"
                    android:enabled="false"
                    android:textColor="@color/text_gray"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/bg_gray"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:text="粉 丝："
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/et_fans_num"
                    android:text="- -"
                    android:editable="false"
                    android:focusable="false"
                    android:enabled="false"
                    android:textColor="@color/text_gray"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:text="情 报："
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/et_intel_num"
                    android:text="- -"
                    android:editable="false"
                    android:focusable="false"
                    android:enabled="false"
                    android:textColor="@color/text_gray"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/bg_gray"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:text="智 文："
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/et_experience_num"
                    android:text="- -"
                    android:editable="false"
                    android:focusable="false"
                    android:enabled="false"
                    android:textColor="@color/text_gray"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:text="被点评："
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/et_comment_by_others_num"
                    android:text="- -"
                    android:editable="false"
                    android:focusable="false"
                    android:enabled="false"
                    android:textColor="@color/text_gray"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/bg_gray"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:text="评TA人："
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/et_comment_others_num"
                    android:text="- -"
                    android:editable="false"
                    android:focusable="false"
                    android:enabled="false"
                    android:textColor="@color/text_gray"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:text="被赞赏："
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/et_rewarded_num"
                    android:text="- -"
                    android:editable="false"
                    android:focusable="false"
                    android:enabled="false"
                    android:textColor="@color/text_gray"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/bg_gray"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:text="城市："
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/et_city"
                    android:text="- -"
                    android:enabled="false"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:text="职业："
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/et_profession"
                    android:text="- -"
                    android:enabled="false"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/bg_gray"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:text="生日："
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/et_birthday"
                    android:text="2015-12-15"
                    android:editable="false"
                    android:enabled="false"
                    android:textColor="@color/text_gray"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/bg_gray"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <TextView
                    android:text="个性签名："
                    android:textColor="@color/black"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/et_sign"
                    android:text="- -"
                    android:enabled="false"
                    android:gravity="left|top"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/text_gray"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <TextView
                    android:text="简介："
                    android:textColor="@color/black"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/et_brief_introduction"
                    android:text="- -"
                    android:enabled="false"
                    android:gravity="left|top"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/text_gray"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
