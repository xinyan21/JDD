<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="50dp">

    <TextView
            android:id="@+id/tv_market"
            android:layout_weight="1"
            android:textColor="@color/text_gray"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    <TextView
            android:id="@+id/tv_now"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    <TextView
            android:id="@+id/tv_change_value"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    <TextView
            android:id="@+id/tv_change_percent"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    <TextView
            android:id="@+id/tv_volumn"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="@color/text_yellow"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    <LinearLayout
            android:layout_weight="2"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/tv_rise_stock_num"
                android:gravity="center_vertical"
                android:textColor="@color/text_red"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        <TextView
                android:gravity="center_vertical"
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/tv_steady_stock_num"
                android:gravity="center_vertical"
                android:textColor="@color/text_gray"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        <TextView
                android:gravity="center_vertical"
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/tv_drop_stock_num"
                android:gravity="center_vertical"
                android:textColor="@color/text_green"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>