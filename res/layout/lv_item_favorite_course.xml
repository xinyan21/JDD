<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/iv_course_icon"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_default_portrait"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <ImageButton
        android:id="@+id/ibtn_delete"
        android:background="@android:color/transparent"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/btn_delete"
        android:focusable="false"
        android:clickable="true"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/tv_course_name"
        android:layout_toRightOf="@id/iv_course_icon"
        android:layout_toLeftOf="@id/ibtn_delete"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="- -"
        android:textSize="16sp"
        android:maxLines="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_teaching_mode"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_course_name"
        android:layout_alignLeft="@id/tv_course_name"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="授课方式"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_teaching_mode_pic"
            android:src="@drawable/ic_teaching_mode_pic"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_first_plus"
            android:text="+"
            android:visibility="gone"
            android:textSize="20dp"
            android:textColor="@color/menu_text_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_teaching_mode_ppt"
            android:visibility="gone"
            android:src="@drawable/ic_teaching_mode_ppt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_second_plus"
            android:text="+"
            android:textSize="20dp"
            android:visibility="gone"
            android:textColor="@color/menu_text_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_teaching_mode_video"
            android:visibility="gone"
            android:src="@drawable/ic_teaching_mode_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_about"
        android:layout_toRightOf="@id/iv_course_icon"
        android:layout_below="@id/ll_teaching_mode"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="- -"
        android:maxLines="3"
        android:textSize="14sp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>