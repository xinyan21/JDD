<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/shape_input_rounded_corner"
    android:layout_width="300dp"
    android:layout_height="200dp">

    <TextView
        android:id="@+id/tv_others_amount_of_money"
        android:text="其它金额"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_amount_of_money"
        android:layout_below="@id/tv_others_amount_of_money"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_input_rounded_corner"
        android:layout_width="200dp"
        android:layout_height="45dp" />

    <Button
        android:id="@+id/btn_reward_custom_money"
        android:layout_below="@id/et_amount_of_money"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_btn_rounded_orange"
        android:text="打赏给TA"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/btn_cancel_custom_money"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/et_amount_of_money"
        android:layout_alignParentLeft="true"
        android:background="@drawable/shape_rounded_solid_gray_stroke_gray"
        android:textColor="@color/text_gray"
        android:text="取消"
        android:layout_width="80dp"
        android:layout_height="40dp" />
</RelativeLayout>